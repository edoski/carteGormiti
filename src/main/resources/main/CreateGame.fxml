            prefWidth="1280.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.CreateGameController">
    <children>
        <TextField fx:id="playerNameTextField" alignment="CENTER" layoutX="120.0" layoutY="323.0" prefHeight="67.0"
                   prefWidth="484.0" promptText="Player Name">
            <font>
                <Font size="26.0"/>
            </font>
        </TextField>
        <Button fx:id="addPlayerBtn" layoutX="317.0" layoutY="413.0" mnemonicParsing="false" onAction="#addHuman"
                text="Confirm">
            <font>
