<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="login_menu.LoginController">
   <children>
       <TextField fx:id="loginTextField" alignment="CENTER" layoutX="196.0" layoutY="229.0" prefHeight="34.0" prefWidth="211.0" promptText="Inserisci nome Giocatore..." />
       <Button fx:id="addPlayerBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="228.0" layoutY="275.0"
               mnemonicParsing="false" onAction="#addPlayer" prefHeight="26.0" prefWidth="144.0" text="add player"
               textAlignment="CENTER"/>
       <Label fx:id="codeLabel" alignment="CENTER" layoutX="10.0" layoutY="166.0" prefHeight="55.0" prefWidth="584.0">
           <font>
               <Font size="18.0" />
           </font>
       </Label>
      <ProgressBar fx:id="progress" layoutX="116.0" layoutY="61.0" prefHeight="26.0" prefWidth="372.0" progress="0.0" />
      <RadioButton fx:id="robot" layoutX="183.0" layoutY="332.0" mnemonicParsing="false" text="Robot">
         <toggleGroup>
            <ToggleGroup fx:id="playerType" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="human" layoutX="330.0" layoutY="332.0" mnemonicParsing="false" text="Human" toggleGroup="$playerType" />
   </children>
</AnchorPane>
